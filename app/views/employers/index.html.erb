<p id="notice"><%= notice %></p>

<h1>Listing Employers</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= employer.name %></td>
        <td><%= employer.address %></td>
        <td><%= employer.phone %></td>
        <td><%= employer.website %></td>
        <td><%= link_to 'Show', employer, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_employer_path(employer), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employer', new_employer_path, class: "btn btn-primary" %>
